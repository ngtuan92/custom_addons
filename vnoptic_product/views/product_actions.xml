<odoo>
    <!-- Action for Lens Products -->
    <record id="action_lens_products" model="ir.actions.act_window">
        <field name="name">Lens Products</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('product_type', '=', 'lens')]</field>
        <field name="context">{'default_product_type': 'lens'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo sản phẩm Lens đầu tiên
            </p>
        </field>
    </record>

    <!-- Action for Optical Products -->
    <record id="action_opt_products" model="ir.actions.act_window">
        <field name="name">Optical Products</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('product_type', '=', 'opt')]</field>
        <field name="context">{'default_product_type': 'opt'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo sản phẩm Optical đầu tiên
            </p>
        </field>
    </record>

    <!-- Action for Accessory Products -->
    <record id="action_accessory_products" model="ir.actions.act_window">
        <field name="name">Accessory Products</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('product_type', 'not in', ['lens', 'opt'])]</field>
        <field name="context">{'default_product_type': 'other'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo sản phẩm phụ kiện đầu tiên
            </p>
        </field>
    </record>
</odoo>
