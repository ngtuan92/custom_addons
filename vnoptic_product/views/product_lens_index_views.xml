<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="product_lens_index_tree_view" model="ir.ui.view">
        <field name="name">product.lens.index.tree</field>
        <field name="model">product.lens.index</field>
        <field name="arch" type="xml">
            <tree string="Chiết suất">
                <field name="name"/>
                <field name="cid"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="product_lens_index_form_view" model="ir.ui.view">
        <field name="name">product.lens.index.form</field>
        <field name="model">product.lens.index</field>
        <field name="arch" type="xml">
            <form string="Chiết suất">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="cid"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Wizard Form -->
    <record id="product_lens_index_wizard_form_view" model="ir.ui.view">
        <field name="name">product.lens.index.wizard.form</field>
        <field name="model">product.lens.index.wizard</field>
        <field name="arch" type="xml">
            <form string="Tạo chiết suất mới">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="cid"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Tạo" type="object" name="action_create_lens_index" class="btn-primary"/>
                    <button string="Hủy" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action for Lens Index List -->
    <record id="action_product_lens_index" model="ir.actions.act_window">
        <field name="name">Chiết suất</field>
        <field name="res_model">product.lens.index</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Chưa có chiết suất nào!
            </p>
            <p>
                Hãy tạo chiết suất đầu tiên của bạn.<br/>
                Chiết suất giúp phân loại tròng kính theo chỉ số khúc xạ (1.50, 1.56, 1.60, 1.67...).
            </p>
        </field>
    </record>

    <!-- Action for Wizard -->
    <record id="action_product_lens_index_wizard" model="ir.actions.act_window">
        <field name="name">Tạo chiết suất mới</field>
        <field name="res_model">product.lens.index.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="product_lens_index_wizard_form_view"/>
        <field name="target">new</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_product_lens_index"
              name="Chiết suất"
              parent="menu_vnoptic_main"
              action="action_product_lens_index"
              sequence="27"/>
</odoo>
