<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="product_color_intensity_tree_view" model="ir.ui.view">
        <field name="name">product.color.intensity.tree</field>
        <field name="model">product.color.intensity</field>
        <field name="arch" type="xml">
            <tree string="Độ đậm màu">
                <field name="name"/>
                <field name="cid"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="product_color_intensity_form_view" model="ir.ui.view">
        <field name="name">product.color.intensity.form</field>
        <field name="model">product.color.intensity</field>
        <field name="arch" type="xml">
            <form string="Độ đậm màu">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="cid"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Wizard Form -->
    <record id="product_color_intensity_wizard_form_view" model="ir.ui.view">
        <field name="name">product.color.intensity.wizard.form</field>
        <field name="model">product.color.intensity.wizard</field>
        <field name="arch" type="xml">
            <form string="Tạo độ đậm màu mới">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="cid"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Tạo" type="object" name="action_create_color_intensity" class="btn-primary"/>
                    <button string="Hủy" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action for List -->
    <record id="action_product_color_intensity" model="ir.actions.act_window">
        <field name="name">Độ đậm màu</field>
        <field name="res_model">product.color.intensity</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Chưa có độ đậm màu nào!
            </p>
            <p>
                Hãy tạo độ đậm màu đầu tiên của bạn.<br/>
                Độ đậm màu giúp phân loại mức độ tối của tròng kính (10%, 25%, 50%, 75%...).
            </p>
        </field>
    </record>

    <!-- Action for Wizard -->
    <record id="action_product_color_intensity_wizard" model="ir.actions.act_window">
        <field name="name">Tạo độ đậm màu mới</field>
        <field name="res_model">product.color.intensity.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="product_color_intensity_wizard_form_view"/>
        <field name="target">new</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_product_color_intensity"
              name="Độ đậm màu"
              parent="menu_vnoptic_main"
              action="action_product_color_intensity"
              sequence="28"/>
</odoo>
