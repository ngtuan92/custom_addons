<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="product_coating_tree_view" model="ir.ui.view">
        <field name="name">product.coating.tree</field>
        <field name="model">product.coating</field>
        <field name="arch" type="xml">
            <tree string="Lớp phủ sản phẩm">
                <field name="name"/>
                <field name="cid"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="product_coating_form_view" model="ir.ui.view">
        <field name="name">product.coating.form</field>
        <field name="model">product.coating</field>
        <field name="arch" type="xml">
            <form string="Lớp phủ sản phẩm">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="cid"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Wizard Form -->
    <record id="product_coating_wizard_form_view" model="ir.ui.view">
        <field name="name">product.coating.wizard.form</field>
        <field name="model">product.coating.wizard</field>
        <field name="arch" type="xml">
            <form string="Tạo lớp phủ mới">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="cid"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Tạo" type="object" name="action_create_coating" class="btn-primary"/>
                    <button string="Hủy" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action for Coating List -->
    <record id="action_product_coating" model="ir.actions.act_window">
        <field name="name">Lớp phủ sản phẩm</field>
        <field name="res_model">product.coating</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Chưa có lớp phủ nào!
            </p>
            <p>
                Hãy tạo lớp phủ đầu tiên của bạn.<br/>
                Lớp phủ giúp phân loại sản phẩm theo công nghệ phủ (HC, HMC, Blue Cut, Photochromic...).
            </p>
        </field>
    </record>

    <!-- Action for Wizard -->
    <record id="action_product_coating_wizard" model="ir.actions.act_window">
        <field name="name">Tạo lớp phủ mới</field>
        <field name="res_model">product.coating.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="product_coating_wizard_form_view"/>
        <field name="target">new</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_product_coating"
              name="Lớp phủ"
              parent="menu_vnoptic_main"
              action="action_product_coating"
              sequence="27"/>
</odoo>
