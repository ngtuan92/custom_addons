<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Product Group Wizard Form View -->
    <record id="view_product_group_wizard_form" model="ir.ui.view">
        <field name="name">product.group.wizard.form</field>
        <field name="model">product.group.wizard</field>
        <field name="arch" type="xml">
            <form string="Thêm Nhóm Sản Phẩm">
                <sheet>
                    <group>
                        <group string="Thông tin nhóm" colspan="2">
                            <field name="name" placeholder="VD: Đơn tròng, Gọng, Vỏ bao"/>
                            <field name="cid" placeholder="VD: DT, G, VB"/>
                            <field name="group_type_id" 
                                   options="{'no_create': True, 'no_open': True}"/>
                        </group>
                    </group>
                    <group string="Mô tả">
                        <field name="description" nolabel="1" 
                               widget="text"
                               placeholder="Nhập mô tả cho nhóm sản phẩm (tùy chọn)"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Tạo Nhóm" 
                            type="object" 
                            name="action_create_group" 
                            class="btn-primary"/>
                    <button string="Hủy" 
                            class="btn-secondary" 
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action Window -->
    <record id="action_product_group_wizard" model="ir.actions.act_window">
        <field name="name">Thêm Nhóm Sản Phẩm</field>
        <field name="res_model">product.group.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_add_product_group"
              name="Thêm Nhóm Sản Phẩm"
              parent="menu_vnoptic_main"
              action="action_product_group_wizard"
              sequence="16"/>
</odoo>
