<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_user_change_log_tree" model="ir.ui.view">
        <field name="name">user.change.log.tree</field>
        <field name="model">user.change.log</field>
        <field name="arch" type="xml">
            <tree string="Lịch sử thay đổi" create="false" edit="false" delete="false">
                <field name="change_time"/>
                <field name="changed_by"/>
                <field name="field_name"/>
                <field name="old_value"/>
                <field name="new_value"/>
            </tree>
        </field>
    </record>
    
    <!-- Action definition explicitly needed for strict correctness, though used via smart button mostly -->
    <record id="action_view_user_change_log" model="ir.actions.act_window">
        <field name="name">Lịch sử thay đổi</field>
        <field name="res_model">user.change.log</field>
        <field name="view_mode">tree</field>
        <field name="domain">[('user_id', '=', active_id)]</field>
        <field name="context">{'default_user_id': active_id}</field>
    </record>
</odoo>
